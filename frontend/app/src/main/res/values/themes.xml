<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M4_MVP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Set your desired text color here -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>